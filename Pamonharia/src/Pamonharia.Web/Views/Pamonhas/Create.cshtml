@model Pamonharia.Application.ViewModels.PamonhaViewModel

<h2>Nova Pamonha</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sabor" class="control-label"></label>
                <select asp-for="Sabor" class="form-control" asp-items="Html.GetEnumSelectList<Pamonharia.Domain.Enums.SaborPamonha>()"></select>
                <span asp-validation-for="Sabor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>