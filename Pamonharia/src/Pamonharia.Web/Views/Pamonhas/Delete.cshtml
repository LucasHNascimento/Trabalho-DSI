@model Pamonharia.Application.ViewModels.PamonhaViewModel

@{
    ViewData["Title"] = "Excluir Pamonha";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir esta pamonha?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Sabor)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Sabor)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.DataProducao)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.DataProducao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /> 
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>