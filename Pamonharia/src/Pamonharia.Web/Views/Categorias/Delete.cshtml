@model Pamonharia.Application.ViewModels.CategoriaViewModel
<h2>Excluir Categoria</h2>
<h3>Tem certeza que deseja excluir esta categoria?</h3>
<div class="alert alert-warning">
    <small>Atenção: Se houver pamonhas vinculadas, a exclusão será bloqueada.</small>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>