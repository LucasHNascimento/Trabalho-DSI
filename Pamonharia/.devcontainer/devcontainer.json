// .devcontainer/devcontainer.json
{
  "name": "Pamonharia .NET App",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app", // Diz ao VS Code para "entrar" no container 'app'
  "workspaceFolder": "/workspace",

  // Instala as extensões essenciais do VS Code dentro do container
  "extensions": [
    "ms-dotnettools.csharp",
    "ms-azuretools.vscode-docker",
    "ms-mssql.mssql" // Extensão oficial do SQL Server
  ],

  // Instala o SDK do .NET 8 (ou a versão que preferir)
  "postCreateCommand": "dotnet --version",

  // Define um Dockerfile simples para o serviço 'app'
  "build": {
    "dockerfile": "Dockerfile"
  }
}