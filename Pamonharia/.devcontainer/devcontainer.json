{
  "name": "Pamonharia .NET App",

  // Diz ao Codespaces para usar este arquivo para orquestrar os containers
  "dockerComposeFile": "docker-compose.yml",

  // Diz ao VS Code para se "conectar" ao serviço 'app' de dentro do compose
  "service": "app",
  "workspaceFolder": "/workspace",

  // Instala as extensões essenciais do VS Code dentro do container
  "extensions": [
    "ms-dotnettools.csharp",
    "ms-azuretools.vscode-docker",
    "ms-mssql.mssql"
  ],

  // Comando para rodar após o container ser criado (apenas para verificação)
  "postCreateCommand": "dotnet --version"
}