@model Pamonharia.Application.ViewModels.PamonhaViewModel

@{
    ViewData["Title"] = "Nova Pamonha";
}

<h1>@ViewData["Title"]</h1>

<h4>Pamonha</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Sabor" class="control-label"></label>
                <input asp-for="Sabor" class="form-control" />
                <span asp-validation-for="Sabor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ComQueijo" /> @Html.DisplayNameFor(model => model.ComQueijo)
                </label>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}